@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml


title "Carteira Digital - MS"
Person(client, "Client", "Digital Wallet User")
System(wallet,"Digital Wallet System","MS Digital Wallet")

System_Ext(secret_manager, "AWS Secrets Manager", "Credential Manager")
System_Ext(apm, "APM", "Application Performance Monitoring")
System_Ext(collect, "OTEL Collector", "OpenTelemetry Collector")
System_Ext(paymentGateway, "Payment Gateway", "External Payment Processor")

Rel(client, wallet, "Uses", "HTTPS")
Rel(wallet, secret_manager, "Retrieves credentials", "HTTPS")
Rel(wallet, apm, "Sends performance data", "HTTPS")
Rel(wallet, collect, "Sends telemetry data", "HTTPS")
Rel(wallet, paymentGateway, "Processes payments", "HTTPS")



@enduml